{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
    },
    "include": [
        "src/js/**/*.ts",
        "src/js/**/*.js"
    ]
}